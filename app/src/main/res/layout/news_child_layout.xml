<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/news_network_imageview"
        android:layout_width="@dimen/size_75"
        android:layout_height="@dimen/size_75"
        android:background="@drawable/image_background"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/news_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_toRightOf="@id/news_network_imageview"
        tools:text="Helloooooooooooooooo" />

    <TextView
        android:id="@+id/news_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_title_text"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_toRightOf="@id/news_network_imageview"
        tools:text="asddddddddddddddddddddddddddd" />


</RelativeLayout>