<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="robosoft.com.jsonparser.common.ui.BaseFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="#002E4D"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:src="@drawable/ic_arrow_back_white_18dp" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="News"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/download_progress"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size_150"
            android:layout_marginTop="@dimen/size_150"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_centerInParent="true"/>
    </FrameLayout>
</LinearLayout>
